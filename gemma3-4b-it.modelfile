FROM hf.co/unsloth/gemma-3-4b-it-GGUF:latest

TEMPLATE """
{{- if .System }}
<|system|>
{{ .System }}
{{- end }}

{{- range $i, $message := .Messages }}
{{- if eq $message.Role "user" }}
<|user|>
{{ $message.Content }}
{{- else if eq $message.Role "assistant" }}
<|assistant|>
{{ $message.Content }}
{{- end }}
{{- end }}
<|assistant|>
"""