# shellcheck shell=bash
# shellcheck disable=SC2035,SC2050,SC2148

generate-api-types:
    node scripts/generate-api-types.js

deps:
    rm -rf node_modules
    npm install

lint *ARGS: format
        npm run lint {{ARGS}} | tee ui-lint.log

run *ARGS:
    npm run dev -- --host

# Add these commands once we set up the npm scripts
format:
    npm run format

check *ARGS: format
    npm run check {{ARGS}} | tee npm-check.log

# Production build with quality checks
build:
    npm run build:prod
    nerdctl build . -t symbology-ui:latest

