# shellcheck shell=bash
# shellcheck disable=SC2148

_update-api-types:
    npm --prefix run generate-api-types

run-ui *ARGS:
    npm --prefix ui run dev "{{ARGS}}"

lint-ui *ARGS:
    npm --prefix ui run lint "{{ARGS}}" | tee ui-lint.log

# Add these commands once we set up the npm scripts
ui-format:
    npm --prefix ui run format

ui-check:
    npm --prefix ui run check

ui-deps:
    npm --prefix ui install
